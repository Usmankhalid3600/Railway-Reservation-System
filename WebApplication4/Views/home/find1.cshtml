@model WebApplication4.Models.ticket

@{
    ViewBag.Title = "find1";
}


<!DOCTYPE html>
<html>
<head>

    <link rel="stylesheet" href="~/scripts/css/divs.css" />
    <title>Railway System</title>
    <style>
        .button {
            background-color: black;
            border: none;
            color: white;
            text-align: center;
            text-decoration: none;
            padding: 10px 10px;
            display: inline-block;
            margin-left: 70%;
            font-size: 25px;
            cursor: pointer;
            border-radius: 8px;
        }
    </style>


</head>
<body>


    <div class="top">Railway Reservation System </div>

    <div class="work">
        <form action="/home/updated" method="get">

            <h1>&nbsp;&nbsp;Reservation Details</h1>
            <br>
            <label style="font-size:1.5em; margin-left:20px;"> <b>Ticket ID:&nbsp; </b>@Model.ticketId </label>
            <br><br>
            <label style="font-size:1.5em; margin-left:20px;"> <b>Passenger ID:&nbsp;</b> @Convert.ToString(Session["pid"])</label>
            <br><br>
            <label style="font-size:1.5em; margin-left:20px;"> <b>Passenger Name:&nbsp; </b> </label> <input type="text" size=30 name="pname" value=@Convert.ToString(Session["name"])>
            <br><br>

            <label style="font-size:1.5em; margin-left:20px;"> <b>Ticket Class:&nbsp; </b></label> <select name="classs" style="width:100px; height:30px;" value=@Model.ticketClass>
    <option value="businessSeats">Business</option>
    <option value="economySeats">Economy</option>
</select>
            <br><br>
            <label style="font-size:1.5em; margin-left:20px;"> <b>Ticket Price:&nbsp; </b>@Model.ticketPrice </label>
            <br><br>
            <label style="font-size:1.5em; margin-left:20px;"> <b>Train Name:&nbsp;</b>@Convert.ToString(Session["tname"]) </label>
            <br><br>
            <label style="font-size:1.5em; margin-left:20px;"> <b>Departure City:&nbsp;</b></label><select name="source" style="width:100px; height:30px; " >
    
    <option value="lahore">Lahore</option>
    <option value="islamabad">Islamabad</option>
    <option value="multan">Multan</option>
    <option value="sargodha">Sargodha</option>
</select>
            <br><br>
            <label style="font-size:1.5em; margin-left:20px;"> <b>Destination City:&nbsp;</b> <select name="destination" style="width:100px; height:30px; ">
    <option value=@Convert.ToString(Session["destination"]) selected> @Convert.ToString(Session["destination"]) </option>
    <option value="lahore">Lahore</option>
    <option value="islamabad">Islamabad</option>
    <option value="multan">Multan</option>
    <option value="sargodha">Sargodha</option>
</select>
            <br><br>
            <input type=submit class="button" value="Submit Changes">
            <br />
            <a style="color:black; font-size:1.5em;" href="/home/index"> &nbsp;&nbsp;Click to go back to main menu </a>
        </form>
    </div>

    <div class="side"> <img src="~/Images/as.jpg" height=100% width=100% /> </div>

    <div class="bottom"> </div>

</body>
</html>





